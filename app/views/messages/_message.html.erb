<div class="message_box">
  <div class="message_upper">
    <div class="message_name">
      <!-- 投稿したユーザー名情報を出力する -->
      <%= message.user.name %>

    </div>
    <div class="message_time">
      <!-- 投稿した時刻を出力する -->
      <%= message.created_at %>

    </div>
  </div>
  <div class="message_lower">
    <div class="message_text">
      <!-- 投稿したメッセージ内容を記述する -->
      <%= message.content %>
    </div>
  </div>
</div>